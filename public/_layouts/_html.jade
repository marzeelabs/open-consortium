doctype html
html(lang='en')
  - var page = {};
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    if environment !== 'production' || (current.path[0] === 'blog' && current.source !== 'index' && public.blog._data.posts[current.source].published === false)
        meta(name='robots', content='noindex, nofollow')

    title #{ title } | #{ tagline }

    if page.description
      meta(name='description' content='#{page.description}')

    if page.author
      meta(name='author' content='#{page.author}')

    // ICONS
    link(rel='shortcut icon', href='/favicon.ico')
    link(rel='apple-touch-icon-precomposed', sizes='144x144', href='/images/apple-touch-icon-144-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='114x114', href='/images/apple-touch-icon-114-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='72x72', href='/images/apple-touch-icon-72-precomposed.png')
    link(rel='apple-touch-icon-precomposed', href='/images/apple-touch-icon-57-precomposed.png')
    // FONTS
    link(href='https://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic|PT+Mono', rel='stylesheet', type='text/css')
    // CSS
    link(rel='stylesheet', href='/css/app.css')
    // Modernizr
    //- script(src='/js/modernizr-custom.min.js')

    //- include ../_partials/analytics

  body(class='#{current.path[0] === "index" ? "body--home" : ""}')

    //- include ../_partials/_header

    block page_content

    //- Add JS
    //- script(src='/js/site.min.js')
    //- if (current.path[0] === "index")
        script(src='/js/home.min.js')
